---
import ButtonComponent from "../components/ui/button-component.astro";
import TitleHero from "../components/ui/title-hero.astro";
---

<section
  id="hero"
  class="relative h-screen flex items-center justify-center overflow-hidden bg-moto-black"
>
  <div class="absolute inset-0 z-0 opacity-20">
    <div
      class="absolute inset-0 bg-[radial-gradient(#DC2626_1px,transparent_1px)] [background-size:16px_16px]"
    >
    </div>
  </div>

  <!-- Watermark Image -->
  <div
    class="absolute inset-0 flex items-center justify-center z-0 pointer-events-none opacity-10"
  >
    <img src="/hero-bg.jpeg" alt="Watermark" class="w-full object-contain" />
  </div>

  <div class="relative z-10 text-center px-4">
    <TitleHero
      title="Velocidad"
      title2="y Sabor"
      subtitle="Las mejores hamburguesas para los amantes del asfalto."
    />
    <div class="flex flex-col sm:flex-row gap-4 justify-center">
      <ButtonComponent href="#menu" name="VER MENÃš" size="large" />
    </div>
  </div>

  <div
    class="absolute inset-0 bg-gradient-to-t from-moto-black via-transparent to-moto-black/50 pointer-events-none"
  >
  </div>
</section>
